import { CheckBox, GroupBox, Button, Palette, StandardButton, HorizontalBox, GridBox, LineEdit, VerticalBox } from "std-widgets.slint";
import { Installations } from "../global.slint";

export component OptionsPage inherits VerticalLayout {
    Rectangle {
        VerticalBox {
            max-width: 664px;

            Text {
                text: @tr("Game Options");
                font-size: 20px;
            }
            fullscreen := CheckBox {
                text: @tr("Fullscreen");
            }
        }
    }
    Rectangle {
        vertical-stretch: 1;
    }
    Rectangle {
        background: Palette.background.darker(0.2);

        HorizontalBox {
            alignment: end;

            StandardButton {
                kind: cancel;
                clicked => { Installations.current-page = 0; }
            }
            StandardButton {
                kind: ok;
                clicked => {
                    Installations.configure-game();
                    Installations.current-page = 0;
                }
            }
        }
    }
}
